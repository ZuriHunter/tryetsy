<div class="jumbotron" style="background: url('http://s3.amazonaws.com/tryetsy/artedited3.jpg')">
  <h1>Handcrafted Items</h1> <br /><br />
  <h2>Discover one-of-a-kind items </h2>
</div>


<div class="center">
      <h1>Listing listings</h1>




         <div class="row">
          <% @listings.each do |listing| %>

            <div class="col-md-3">
              <%= link_to image_tag(listing.image_url (:thumb)), listing %>
              <div class="caption">
                <h3><%= listing.name %> </h3>
                <p><%= listing.user.name %></p>
                <p><%= number_to_currency(listing.price) %></p>
              
              
                
            <% if (user_signed_in?) && (current_user == listing.user) %>
             <!--- <%= link_to 'Edit', edit_listing_path(listing) %> -->
             <!--<%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %> -->
            <% end %>
              </div><!--caption-->
             </div><!--colmd3-->
          <% end %>
         </div><!--row-->


        <br>
    <% if (user_signed_in?) %>
      <%= link_to 'New Listing', new_listing_path %>
  <% end %>
</div><!--center-->